<!-- -*- mode: XML -*- -->
<launch>

    ################ car node ################
    <node pkg="car" name="car" type="car" output="screen">
        <param name="odom_frame" value="odom"/>
        <param name="base_frame" value="base_link"/>
        <!-- Initial pose of car -->
        <param name="x" value="0"/>
        <param name="y" value="0"/>
        <param name="z" value="0"/>
        <!-- Initial velocity of car -->
        <param name="vx" value="0"/>
        <param name="vy" value="0"/>
        <param name="vth" value="0"/>
        <param name="duration" value="0.01"/>
    </node>

    ################ pidcontrol node ################
    <node pkg="car" name="pidcontrol" type="pidcontrol" output="screen">
        <param name="duration" value="0.1"/>
        <param name="KP0" value="3"/>
        <param name="KI0" value="0.01"/>
        <param name="KD0" value="0"/>
        <param name="KP1" value="3"/>
        <param name="KI1" value="0.01"/>
        <param name="KD1" value="0"/>
        <param name="KP2" value="0"/>
        <param name="KI2" value="0"/>
        <param name="KD2" value="0"/>
    </node>

    ################ rviz node ################
    <node pkg="rviz" type="rviz" name="rviz" args="-d $(find car)/rviz/pidcontrol.rviz"/>

</launch>
